.chat-side
  .side-header
    .side-header__box
      %h3.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        -# %li.list
        -#   = link_to new_group_path do
        -#   = icon('fas', 'edit', class: 'icon')
        -# %li.list
        -#   = link_to edit_user_path(current_user) do
        -#   = icon('fas', 'cog', class: 'icon')
        %li.list
          = link_to new_group_path, class: 'icon' do
            %i.fas.fa-edit
        %li.list
          = link_to edit_user_path(current_user), class: 'icon' do
            %i.fa.fa-cog

  .groups
    - current_user.groups.each do |group|
      .groups__chat
        = link_to group_messages_path(group) do
          .groups__chat__title
            = group.group_name
          .groups__chat__messages
            = group.show_last_message

